<%- contentFor('page_title') %> <%= transaction.transaction_type==='income' ?
'Income' : 'Expense' %> Detail <%- contentFor('body') %>
<div class="container-t body-wrapper">
  <%- include('../partials/sidebar') %>
  <main>
    <h1>
      <%= transaction.transaction_type==='income' ? 'Income' : 'Expense' %>
      Details
    </h1>
    <div class="content-wrapper">
      <div class="md-content-width transaction-detail">
        <div class="text-center">
          <h3 class="text-dark">
            <%= transaction.category_name %>
          </h3>
          <h4
            class="text-bold text-2x <%= transaction.transaction_type === 'expense' ? 'text-danger' : 'text-success' %>"
            title="Amount"
          >
            <%= new Intl.NumberFormat().format(transaction.amount) %>
          </h4>

          <h4 class="text-bold text-dark margin-top-20">Tanggal:</h4>
          <p><%= transaction.date.toISOString().substr(0, 10) %></p>

          <h4 class="text-bold text-dark margin-top-20">Deskripsi</h4>
          <p><%= transaction.description %></p>
        </div>
      </div>
    </div>
  </main>
</div>
